<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.extentia.dlrulecreate.controller.DLRuleCreate" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showNavButton="true" navButtonPress="onBack" showHeader="true">
				<customHeader>
					<Bar>
						<contentLeft>
							<Button id="navBack" icon="sap-icon://nav-back" press="onBack"></Button>
						</contentLeft>
						<contentMiddle>
							<Title text="DL Rule Create"></Title>
						</contentMiddle>
						<contentRight>
							<Button id="addNames" text="Field Name" icon="sap-icon://add" press="addFieldNames">
								<customData>
									<core:CustomData key="multi" value="true"/>
									<core:CustomData key="remember" value="true"/>
								</customData>
							</Button>
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<mvc:XMLView id="DLRuleAddView" viewName="com.extentia.dlrulecreate.view.DLRuleAdd"/>
				</content>
				<footer>
					<Toolbar>
						<!--<Button id="buttonMessages" icon="sap-icon://alert" press="messagePopoverOpen" text="{controls>/buttonMessagesText}"-->
						<!--	type="{controls>/buttonMessagesType}"></Button>-->
						<!--<Button icon="sap-icon://alert" type="Emphasized" press="openMsgList" visible="false"/>-->
						<ToolbarSpacer/>
						<Button type="Reject" icon="sap-icon://reset" text="Cancel" press="onCancel" visible="{LocalViewSetting>/footerVisible}"/>
						<Button type="Accept" icon="sap-icon://save" text="Save" press="onSave" visible="{LocalViewSetting>/footerVisible}"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>