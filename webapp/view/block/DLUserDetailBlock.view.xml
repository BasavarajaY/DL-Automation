<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.extentia.dlrulecreate.controller.block.DLUserDetailBlock" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:table="sap.ui.table">
	<table:Table id="UIDLUserTable" rows="{DLUserDetails>/}" showColumnVisibilityMenu="true" enableGrouping="false" selectionMode="None"
		minAutoRowCount="5" visibleRowCount="5" enableSelectAll="false" enableColumnFreeze="true" noData="No Data" visibleRowCountMode="Fixed">
		<table:toolbar>
			<Toolbar>
				<Title id="UIDLUserTableTitle" text="User Details" level="H2" visible="true"/>
				<ToolbarSpacer/>
				<Button id="addUser" icon="sap-icon://add-employee" text="Add User" press="onAddUser" tooltip="Add User"
					visible="{LocalViewSettingDLDtl>/editMode}">
					<customData>
						<core:CustomData key="multi" value="true"/>
						<core:CustomData key="remember" value="true"/>
					</customData>
				</Button>
				<Button id="deleteUsers" icon="sap-icon://employee-rejections" text="Delete User" press="onDeleteUser" tooltip="Delete User"
					visible="{LocalViewSettingDLDtl>/editMode}"></Button>
			</Toolbar>
		</table:toolbar>
		<table:columns>
			<table:Column autoResizable="true" tooltip="Select User" width="5%" visible="{LocalViewSettingDLDtl>/editMode}">
				<Text text=""/>
				<table:template>
					<CheckBox id="selectUsers" select="onUserSelect"></CheckBox>
				</table:template>
			</table:Column>
			<table:Column sortProperty="UserId" filterProperty="UserId" autoResizable="true" visible="true" tooltip="UserId">
				<Text text="User Id"/>
				<table:template>
					<Text text="{DLUserDetails>UserId}" class="sapUiTinyMarginTopBottom" tooltip="UserId" wrapping="true"/>
				</table:template>
			</table:Column>
			<table:Column sortProperty="FirstName" filterProperty="FirstName" autoResizable="true" visible="true" tooltip="FirstName">
				<Text text="First Name"/>
				<table:template>
					<Text text="{DLUserDetails>FirstName}" class="sapUiTinyMarginTopBottom" tooltip="FirstName" wrapping="true"/>
				</table:template>
			</table:Column>
			<table:Column sortProperty="LastName" filterProperty="LastName" autoResizable="true" visible="true" tooltip="LastName">
				<Text text="Last Name"/>
				<table:template>
					<Text text="{DLUserDetails>LastName}" class="sapUiTinyMarginTopBottom" tooltip="LastName" wrapping="true"/>
				</table:template>
			</table:Column>
			<table:Column sortProperty="Role" filterProperty="Role" autoResizable="true" visible="true" tooltip="Role">
				<Text text="Role"/>
				<table:template>
					<Text text="{DLUserDetails>Role}" class="sapUiTinyMarginTopBottom" tooltip="Role" wrapping="true"/>
				</table:template>
			</table:Column>
			<table:Column sortProperty="Country" filterProperty="Country" autoResizable="true" visible="true" tooltip="Country">
				<Text text="Country"/>
				<table:template>
					<Text text="{DLUserDetails>Country}" class="sapUiTinyMarginTopBottom" tooltip="Country" wrapping="true"/>
				</table:template>
			</table:Column>
			<table:Column autoResizable="true" visible="false" tooltip="Delete User" width="3%">
				<Text text=""/>
				<table:template>
					<Button id="deleteUser" icon="sap-icon://delete" press="onDeleteUser" tooltip="Delete User"/>
				</table:template>
			</table:Column>
		</table:columns>
	</table:Table>
</mvc:View>